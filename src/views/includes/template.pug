//- block config
//- include ./config

include ../mixin/button
include ../mixin/project

doctype html
html(lang="es")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description" content="PEDRO PURIHUAMAN")
		title="Bienvenid@s - PEDRO PURIHUAMAN"
		link(rel="shortcut icon", href="./assets/icons/logo-puri.svg", type="image/x-icon")
		link(rel="preconnect" href="https://fonts.googleapis.com")
		link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
		link(href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Roboto:wght@400;700&display=swap" rel="stylesheet")
	body
		header.header
			.container
				.header__container
					.container-logo
						a(href="./").container-logo__link
							img(src="./assets/icons/logo-puri.svg", alt="logotipo Pedro Purihuaman" class='container-logo__image')

					include menu

					.iconMenu#iconMenu
						.iconMenu__icon


		main.main
			block banner
			.container
				block about
				block projects

		footer.footer
			.container
				block footer
					include footer-content
