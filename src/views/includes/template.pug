include ../mixin/button
include ../mixin/project

doctype html
html(lang="es")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(name="description" content="PEDRO PURIHUAMAN")
		title="Bienvenid@s - PEDRO PURIHUAMAN"
		link(rel="shortcut icon", href="./assets/icons/logo-puri.svg", type="image/x-icon")
	body
		header.main-header
			.container-layout
				.main-header__container
					.container-logo
						a(href="./").container-logo__link
							img(src="./assets/icons/logo-puri.svg", alt="logotipo Pedro Purihuaman" class='container-logo__image')

					include menu

					.iconMenu#iconMenu
						.iconMenu__icon


		main.main
			.container-layout
				block banner
				block about
				//- block projects

		footer.main-footer
			.container-layout
				block footer
					include footer-content
