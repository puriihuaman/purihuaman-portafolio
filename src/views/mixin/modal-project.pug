mixin modalProject( id, title, image, description, date, typeproject, links )
	section(id=`${id}`).modal-project
		article.modal-project__content
			a(href="#cerrar" class="button modal-project__close")
				<svg aria-hidden="true" class="modal-project__icon" focusable="false" data-prefix="fas" data-icon="times-circle" class="svg-inline--fa fa-times-circle fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M256 8C119 8 8 119 8 256s111 248 248 248 248-111 248-248S393 8 256 8zm121.6 313.1c4.7 4.7 4.7 12.3 0 17L338 377.6c-4.7 4.7-12.3 4.7-17 0L256 312l-65.1 65.6c-4.7 4.7-12.3 4.7-17 0L134.4 338c-4.7-4.7-4.7-12.3 0-17l65.6-65-65.6-65.1c-4.7-4.7-4.7-12.3 0-17l39.6-39.6c4.7-4.7 12.3-4.7 17 0l65 65.7 65.1-65.6c4.7-4.7 12.3-4.7 17 0l39.6 39.6c4.7 4.7 4.7 12.3 0 17L312 256l65.6 65.1z"></path></svg>
			article.modal-project__info
				img(src=`./assets/image/${image}`, alt= description).modal-project__image

				.modal-project__description
					h3.modal-project__title= title
					p.modal-project__text= description
					.details
						small.details__info
							b.details__title Fecha: 
							=date
						small.details__info
							b.details__title Tipo: 
							=typeproject
						small.details__info
							b.details__title Enlace: 
							a(href= links class='link' target='_blank')= links